// variables
$fb-color = #425F9F
$website-color = #607D8B
$direccion-color = #D93B2B
$twitter-color = #50ABF1
$instagram-color = #4090DB
$telefono-color = #FDD835


.btn-filter
  margin: 10px

#filters-section
  background-color: #8BD1E3
  margin-bottom: 20px
  text-align: center
  -webkit-box-shadow: 0px 5px 50px 2px rgba(0,0,0,0.2)
  -moz-box-shadow: 0px 5px 10px 2px rgba(0,0,0,0.2)
  box-shadow: 0px 5px 10px 2px rgba(0,0,0,0.2)

.huge
  font-size: 40px

hr
  color: #B6B6B6

.infoElement
  height: 100px
  text-align: center
  padding: 18% 0 20% 0
  font-size: 1.2em

.infoDireccion
  .fa-map-marker
    color: $direccion-color

  &:hover
    background-color: $direccion-color
    color: white
    .fa-map-marker
      color: white

.infoTelefono
  .fa-phone-square
    color: $telefono-color

  &:hover
    background-color: $telefono-color
    color: white
    .fa-phone-square
      color: white

.infoFacebook
  .fa-facebook-official
    color: $fb-color

  &:hover
    background-color: $fb-color
    color: white
    .fa-facebook-official
      color: white

.infoTwitter
  .fa-twitter-square
    color: $twitter-color

  &:hover
    background-color: $twitter-color
    color: white
    .fa-twitter-square
      color: white

.infoInstagram
  .fa-instagram
    color: $instagram-color

  &:hover
    background-color: $instagram-color
    color: white
    .fa-instagram
      color: white

.infoWebsite
  .fa-globe
    color: $website-color

  &:hover
    background-color: $website-color
    color: white
    .fa-globe
      color: white

.infoDireccion,
.infoTelefono,
.infoFacebook,
.infoTwitter,
.infoInstagram,
.infoWebsite,
.fa-map-marker,
.fa-phone-square,
.fa-facebook-official,
.fa-twitter-square,
.fa-instagram,
.fa-globe
  -webkit-transition-property: background-color, color
  -moz-transition-property: background-color, color
  -o-transition-property: background-color, color
  -ms-transition-property: background-color, color
  transition-property: background-color, color
  -webkit-transition-duration: 500ms
  -moz-transition-duration: 500ms
  -o-transition-duration: 500ms
  -ms-transition-duration: 500ms
  transition-duration: 500ms

.loading
  position: absolute
  top: 50%
  left: 50%
  transform: translateX(-50%) translateY(-50%)

#mapa-princial
  height: 550px

